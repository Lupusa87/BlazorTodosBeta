        .MyContainerAbout {
            display: grid;
            position: relative;
            height:100%;
            width:100%;
            grid-template-rows: 35px;
            overflow: hidden;
            color: #f2f2f2;
            margin:10px;
            margin-top:50px;
            margin-left:100px;

            font-size:20px;
        }


        #imgAuthor {
